{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Royoltech Repair Manager",
  "version": "1.0.0",
  "identifier": "com.royoltech.repairmanager",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "repair-stock-management",
        "label": "main",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:; onnect-src 'self' https://*.turso.io wss://*.turso.io https://mail.royoltech.com;style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Royoltech Solutions",
    "copyright": "Copyright Â© 2025 Royoltech Solutions",
    "shortDescription": "Electronics Repair Shop Management System",
    "longDescription": "",
    "resources": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}